<h1>Presenting.. Your New Outfit!</h1>

<div class="container">
  <div class="row">
<div class="col-md-4">
    <% @shoes.each do |shoe| %>
    
    <h2><%= shoe.name %></h2>
      <li><strong>Style: </strong> <%= shoe.style %></li>
      <li><strong>Color: </strong> <%= shoe.color %></li>
      <li><strong>Occasion: </strong> <%= shoe.occasion %></li>
      <li><strong>Season: </strong> <%= shoe.season %> </li>

  </div>
    <% end %>

    <div class="col-md-4">
    

    <% @accessories.each do |accessory| %>
      
      <h2><%= accessory.name %></h2>

      <li><strong>Style: </strong><%= accessory.style %></li>
      <li><strong>Color: </strong><%= accessory.color %></li>
      <li><strong>Occasion: </strong><%= accessory.occasion %></li>
      <li><strong>Season: </strong><%= accessory.season %></li>
 

  </div>
    <% end %>



<div class="col-md-4">

<% @garments.each do |garment| %>

  <h2><%= garment.name %></h2>
  
  <div class="container">
    <li><strong>Style: </strong> <%= garment.style %></li>
    <li><strong>Color: </strong> <%= garment.color %></li>
    <li><strong>Occasion: </strong> <%= garment.occasion %></li>
    <li><strong>Season: </strong> <%= garment.season %> </li>

</div>
</div>

<% end %>
  
  </div>
</div>
<%= render 'form' %>