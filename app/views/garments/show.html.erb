<h1><%=@garment.name.capitalize %></h1>

  <div class="container center">
    <ul>

     <div class="image" >
      <td><%= image_tag @garment.image %></td><br>

    <strong>Style: </strong> <%= @garment.style %>
    <strong>Color: </strong> <%= @garment.color %>
    <strong>Occasion: </strong> <%= @garment.occasion %>
    <strong>Season: </strong> <%= @garment.season %> 
    <strong>Ready to wear: </strong> <%= @garment.worn %>
    </ul>


<%= link_to garments_path, class: "btn btn-default" do %>
    <i class="glyphicon glyphicon-arrow-left"></i>
<% end %>

<%= link_to garment_destroy_path(@garment), class: "btn btn-default" do %>
    <i class="glyphicon glyphicon-remove"></i>
<% end %>


<%= link_to new_garment_path, class: "btn btn-default" do %>
    <i class="glyphicon glyphicon-pencil"></i>
<% end %>
</div>

</div>
