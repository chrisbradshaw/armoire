<h1><%=@garment.name.capitalize %></h1><br>
  <div class="container center">
    <div class="image" >
      <p>
        <img width="400" height="325" src="<%= @garment.image%>">
      </p>
        <strong>Style: </strong> <%= @garment.style %><br>
        <strong>Color: </strong> <%= @garment.color %><br>
        <strong>Occasion: </strong> <%= @garment.occasion %><br>
        <strong>Season: </strong> <%= @garment.season %><br>
        <strong>Ready to wear: </strong> <%= @garment.worn %><br>
    </div>
<%= link_to garment_path, class: "btn btn-default" do %>
    <i class="glyphicon glyphicon-arrow-left"></i>
<% end %>
<%= link_to garment_destroy_path(@garment), class: "btn btn-default" do %>
    <i class="glyphicon glyphicon-remove"></i>
<% end %>
<%= link_to edit_garment_path, class: "btn btn-default" do %>
    <i class="glyphicon glyphicon-pencil"></i>
<% end %>
</div>
