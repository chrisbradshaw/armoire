<%= form_for @garment, html: { multipart: true } do |f| %>
  <% if @garment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@garment.errors.count, "error") %> prohibited this garment from being put in your Armoire:</h2>

      <ul>
      <% @garment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <caption>Add an image of your garment:</caption>
  <div class="image field">
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %><br>
  </div><br>

 
  <div class="field">
      <%= f.label :name %><br>
      <%= f.text_area :name, class:'form-control' %><br>

      <%= f.label :element %><br>
      <%= f.text_area :element, class:'form-control' %><br>

      <%= f.label :style %><br>
      <%= f.text_area :style, class:'form-control' %><br>

      <%= f.label :color %><br>
      <%= f.text_area :color, class:'form-control' %><br>

      <%= f.label :season %><br>
      <%= f.select :season, f.object.class.seasons.keys %><br>

      <%= f.label :worn %><br>
      <%= f.check_box :worn %><br>
  </div>

  <div class="actions">
   <%= f.submit "Add Garment", class: "btn btn-primary" %>
  </div>
<% end %>
