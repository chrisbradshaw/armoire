<%= form_for(@garment) do |f| %>
  <div class="field">
      <%= f.label :name %><br>
      <%= f.text_area :name %><br>

      <%= f.label :element %><br>
      <%= f.text_area :element %><br>

      <%= f.label :style %><br>
      <%= f.text_area :style %><br>

      <%= f.label :color %><br>
      <%= f.text_area :color %><br>

      <%= f.label :occassion %><br>
      <%= f.text_area :occassion %><br>

      <%= f.label :season %><br>
      <%= f.text_area :season %><br>

      <%= f.label :worn %><br>
      <%= f.check_box :worn %><br>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
