<h1>Your Shoes</h1>

<div class="container">
<ul>
  <% current_user.shoes.each do |shoe| %>
    <p>
      <a href="/shoes/<%=shoe.id%>">
        <img src="<%=shoe.image%>", img width="150" height="150">
      </a>
    </p>
  <% end %>
  </ul>
</div>


<%= link_to root_path, class: "btn btn-default" do %>
    <i class="glyphicon glyphicon-arrow-left"></i>
<% end %>

<%= link_to new_shoe_path, class: "btn btn-default" do %>
    <span>Add Shoes!</span>
<% end %>


<%= link_to accessories_path, class: "btn btn-default" do %>
    <span>View Accessories!</span>
<% end %>

<%= link_to garments_path, class: "btn btn-default" do %>
    <span>View Garments!</span>
<% end %>
