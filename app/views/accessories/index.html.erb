<h1>Your Accessories</h1>

<div class="container">
  <div class="row center">

    <% current_user.accessories.each do |acc| %>
      <<div class="col-md-4">

        <a href="/accessories/<%=acc.id%>">
          <img src="<%=acc.image%>", img width="150" height="150">
        </a>
      </div>

    <%end%>
  </div><br>
</div>

<%= link_to root_path, class: "btn btn-default" do %>
    <i class="glyphicon glyphicon-arrow-left"></i>
<% end %>


<%= link_to new_accessory_path, class: "btn btn-default" do %>
    <span>Add An Accessory!</span>
<% end %>


<%= link_to shoes_path, class: "btn btn-default" do %>
    <span>View Shoes!</span>
<% end %>

<%= link_to garments_path, class: "btn btn-default" do %>
    <span>View Garments!</span>
<% end %>
